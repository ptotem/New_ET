<section class='section-wrapper'>
<div class='container'>

<!-- Row Start -->

<div class='row'>

<div class='span9'>

  <div>
    <h4 class="section-header">Leader Board</h4>

    <ul class="nav nav-tabs">
      <li><a href="#daily" data-toggle="tab">Daily Winners</a></li>
      <li><a href="#weekly" data-toggle="tab">Weekly Leaders</a></li>
      <li><a href="#monthly" data-toggle="tab">Monthly Leaders</a></li>
    </ul>

    <div class="tab-content">

      <div class="tab-pane active" id="daily">
        <div class="row-fluid">
          <div><h3>Today's Leaders</h3></div>
        </div>
        <div class="row-fluid">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Rank</th>
              <th>Name</th>
              <th>Score</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td>1</td>
              <td>Bruce Wayne</td>
              <td>450</td>
            </tr>
            <tr>
              <td>2</td>
              <td>Tony Stark</td>
              <td>430</td>
            </tr>
            <tr>
              <td>3</td>
              <td>Braniac</td>
              <td>410</td>
            </tr>
            <tr>
              <td>4</td>
              <td>Lex Luthor</td>
              <td>400</td>
            </tr>
            <tr>
              <td>5</td>
              <td>Hannibal Lecter</td>
              <td>390</td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="tab-pane" id="weekly">
        <div class="row-fluid">
          <div><h3>Weekly Leaders</h3></div>
        </div>
        <div class="row-fluid">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Rank</th>
              <th>Name</th>
              <th>Score</th>
            </tr>
            </thead>
            <tbody>
            <%@week_leaderboard.sort_by { |hsh| hsh[:score] }.reverse![0..4].each_with_index do |user,index|%>
                <tr>
                  <td><%= (index+1) %></td>
                  <td><%= User.find(user[:user_id]).name%></td>
                  <td><%= user[:score]%></td>
                </tr>
            <%end%>

            </tbody>
          </table>
        </div>
      </div>

      <div class="tab-pane" id="monthly">
        <div class="row-fluid">
          <div><h3>Monthly Leaders</h3></div>
        </div>
        <div class="row-fluid">
          <table class="table table-striped">
            <thead>
            <tr>
              <th>Rank</th>
              <th>Name</th>
              <th>Score</th>
            </tr>
            </thead>
            <tbody>
            <%@month_leaderboard.sort_by { |hsh| hsh[:score] }.reverse![0..4].each_with_index do |user,index|%>
                <tr>
                  <td><%= (index+1) %></td>
                  <td><%= User.find(user[:user_id]).name%></td>
                  <td><%= user[:score]%></td>
                </tr>
            <%end%>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>

