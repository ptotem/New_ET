                        <tr>
                          <th>Rank</th>
                          <th>Name</th>
                          <th>Score</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @daily_leaderboard.sort_by {|hsh| hsh[:score]}.reverse![0..4].each_with_index do |user,index| %>
                            <tr>
                              <td><%= (index+1) %></td>
                              <td><%= User.find(user[:user_id]).name %></td>
                              <td><%= user[:score] %></td>
                            </tr>
                        <% end %>
                        </tbody>
                    <% end %>

                  </table>
                </div>
              </div>
              <div class="tab-pane" id="weekly">
