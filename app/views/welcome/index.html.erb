              <script>
                $(document).ready(function () {
                  $(function () {
                    $("#head1").addClass('magictime tinRightIn')
                  });
                  $(function () {
                    $("#head2").addClass('magictime tinRightIn')
                  });
                  $(function () {
                    $("#head3").addClass('magictime tinRightIn')
                  });

                  <%if user_signed_in?%>
                    $.ajax({
                      url:"/recent_activity",
                      type:"get",
                      success:function (returning_data) {
                        if(returning_data!=''){
                          returning_data=returning_data.split(",");
                          $('#recent_activity').html();
                          $.each(returning_data,function(){
                            recent=this.replace("[","").replace("]","").replace('"','');
                            $("#recent_activity").append('<li><a href="#">'+recent+'</a></li>');
                          });
                        }
                      }
                    });

                    $.ajax({
                      url:"/get_score",
                      type:"get",
                      success:function (returning_data) {
                        if(returning_data!=''){
                          returning_data=returning_data.split("|");
                            $("#points").html(returning_data[0]+"Points");
                            $("#rank").html(returning_data[1]);
                            $("#percentage").html(returning_data[2]+"%");
                            $(".bar").width(parseInt(returning_data[2])+"%");
                        }
                      }
                    });
                  <%end%>
                  $('#box1').click(function () {
                    $(this).addClass('magictime holeOut');
                    setTimeout(function () {
                      window.location = "/quiz";
                    }, 500);
                  });
                  $('#box2').click(function () {
                    $(this).addClass('magictime holeOut');
                    setTimeout(function () {
                      window.location = "/archives";
                    }, 500);
                  });

                  $("#submit_email").click(function () {
                    var email = $("#referance_friend").val();
                    var data = {email: []}
                    data["email"].push(email);
                    $.ajax({
                      url: "<%= ref_mail_path %>",
                      type: "POST",
                      contentType: "application/json",
                      data: JSON.stringify(data),
                      success: function (data) {
                        alert(data)
                      }
                    });

                  });


                });

function view_register(){
  $('#register').modal('show')
}
</script>

