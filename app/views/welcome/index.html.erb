                </div>
              </div>
              <% if user_signed_in? %>

              <script type="text/javascript">
                $('#box4').click(function () {
                  $(this).addClass('magictime holeOut');
                  setTimeout(function () {
                    window.location = "/profile";
                  }, 500);
                });

              </script>
              <% else %>

              <div id="profile_box" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    ×
                  </button>
                  <h3>Profile</h3>
                </div>
                <div class="modal-body">
                  <h2>Please Login to view your profile</h2>

                  <div class="row-fluid">
                    <div class="span3"></div>
                    <div class="span9">
                      <!--<input type="text" name="ref_email" id="referance_friend">-->
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <!--<a href="#" class="btn medium" data-dismiss="modal">Cancel</a>-->
                  <!--<a href="javascript:void(0);" class="btn medium btn-danger" data-dismiss="modal" id="submit_email">Submit</a>-->
                </div>
              </div>
